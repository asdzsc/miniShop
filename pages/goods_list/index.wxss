.goods_wrap navigator {
  display: flex;
  border-bottom: 5rpx solid #ccc;
}
.goods_wrap navigator .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 10rpx;
}
.goods_wrap navigator .goods_img img {
  width: 70%;
}
.goods_wrap navigator .goods_content {
  flex: 3;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.goods_wrap navigator .goods_content .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_wrap navigator .goods_content .goods_price {
  color: var(--themeColor);
  font-size: 30rpx;
}
